@using Microsoft.AspNetCore.Identity
@using UniversityManagementApp.Areas.Identity.Data

@inject SignInManager<UniversityManagementAppUser> SignInManager
@inject UserManager<UniversityManagementAppUser> UserManager

<ul class="navbar-nav ">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item ">
        <a id="manage" class="nav-link text-dark right" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item ">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark right">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item ">
        <a class="nav-link text-dark right" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
